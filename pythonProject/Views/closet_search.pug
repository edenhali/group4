doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Search
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')
    link(rel='stylesheet', type='text/css', href='../Static/CSS/closet_serach.css')
    link(rel='stylesheet', type='text/css', href='../Static/CSS/closet_style.css')
  body
    include toolbar.pug
    div(id="toolbar-container")
    div(class="container1")
      div(class="introDiv")
        h1 Search
        p Find the perfect outfit for any occasion with our comprehensive clothing search engine
      form(class="formContainer",action="/SearchRes", method="post")
            div(class="search")
                label(for="category") Category:
                select(id="category", name="category")
                    option(value="") Select category:
                    each n in category
                        option(value=n.category) #{n.category}
            div(class="search")
                label(for='color-picker') Color:
                select(id='color-picker',name='color')
                    option(value="") Select color:
                    each n in color
                        option(value=n.color) #{n.color}
            div(class="search")
                label(for='fabric-type') Fabric type:
                select(id='fabric-type',name='fabricType')
                    option(value="") Select fabric-type:
                    each n in fabricType
                        option(value=n.fabricType) #{n.fabricType}
            div(class="search")
                label(for='size') Fabric type:
                select(id='size',name='size')
                    option(value="") Select size:
                    each n in size
                        option(value=n.size) #{n.size}
            div(class="search")
                label(for='Style') Style:
                select(id='Style',name='Style')
                    option(value="") Select Style:
                    each n in Style
                        option(value=n.style) #{n.style}
            div(class="search")
                label(for='goal') Goal:
                select(id='goal',name='goal')
                    option(value="") Select goal:
                    each n in goal
                        option(value=n.goal) #{n.goal}
            div(class="search")
                label(for='city') City:
                select(id='city',name='city')
                    option(value="") Select city:
                    each n in city
                        option(value=n.city) #{n.city}
            div
                button(class='find',type='submit', name='submit', aria-label='Find') Find
